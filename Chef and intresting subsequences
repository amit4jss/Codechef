#include <iostream> 
using namespace std; 
int main() 
{ int t,n,k;
cin>>t;
while(t--)
{ cin>>n>>k;
  int arr[n];
  int newarr[k];
     for (int i = 0; i < n - k + 1; i++) { 

		int current_sum = 0; 


		for (int j = 0; j < k; j++)
		{
			current_sum = current_sum + arr[i + j];
			newarr[j]=current_sum;
		}
		
		}
	int min=newarr[0];	
	for(int i=0;i<k;i++)
	{ if(min<newarr[i])
	   {
	       min=newarr[i];
	   }
	    
	}
	int count=1;
	for(int i=0;i<k;i++)
	{
	    if(min==newarr[i])
	    {
	        count++;
	    }
	}
	cout<<count<<endl;
}

    
	return 0; 
} 
