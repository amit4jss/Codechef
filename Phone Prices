#include <iostream>
using namespace std;
int main() 
{ int t,n;
cin>>t;
while(t--)
{cin>>n;
 int arr[n];
 for(int i=0;i<n;i++)
 {
     cin>>arr[i];
 }
 int max=arr[0];
 int count=1;
 for(int i=1;i<n;i++)
 {
     int j=i-1;
     int d=5,status=1;
     while(j>=0&&d>0)
     {  
        if(arr[i]>=arr[j])
        {
           status=0;
           break;
        }
        d--;
        j--;
     }
     if(status)
     {
         count++;
     }
 }
 
    
    cout<<count<<endl;
}

return 0;
}
