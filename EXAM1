#include<iostream>
using namespace std;
int main() 
{int t,n;
cin>>t;
while(t--)
{   cin>>n;
    char s[n],u[n];
    int count=0;
    for(int i=0;i<n;i++)
    {
        cin>>s[i];
    }
    
    for(int i=0;i<n;i++)
    {
        cin>>u[i];
    }
    for(int i=0;i<n;i++)
    {
        if(s[i]==u[i])
        {
            count++;
            
        }
        else if(u[i]=='N')
        {
            count;
        }
        else if(s[i]!=u[i])
        {
            i++;
        }
     }

    
    
cout<<count<<endl;
}

return 0;
}
